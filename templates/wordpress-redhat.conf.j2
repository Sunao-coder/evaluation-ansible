<VirtualHost *:80>
    ServerAdmin {{ wordpress_apache_server_admin }}
    DocumentRoot {{ wordpress_apache_document_root }}
    
    <Directory {{ wordpress_apache_document_root }}>
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog {{ apache_log_dir }}/wordpress_error.log
    CustomLog {{ apache_log_dir }}/wordpress_access.log combined
</VirtualHost>
